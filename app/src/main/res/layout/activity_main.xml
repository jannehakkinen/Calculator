<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3BBBB"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/button_1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="450dp"
        android:text="1"
        app:backgroundTint="#655454" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="450dp"
        android:text="2"
        app:backgroundTint="#655454" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="450dp"
        android:text="3"
        app:backgroundTint="#655454" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="500dp"
        android:text="4"
        app:backgroundTint="#655454" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="500dp"
        android:text="5"
        app:backgroundTint="#655454" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="500dp"
        android:text="6"
        app:backgroundTint="#655454" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="550dp"
        android:text="7"
        app:backgroundTint="#655454" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="550dp"
        android:text="8"
        app:backgroundTint="#655454" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="550dp"
        android:text="9"
        app:backgroundTint="#655454" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="600dp"
        android:text="0"
        app:backgroundTint="#655454" />
    <Button
        android:id="@+id/button_comma"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="600dp"
        android:text=","
        app:backgroundTint="#655454" />
    <Button
        android:id="@+id/button_equals"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="600dp"
        android:text="="
        app:backgroundTint="#8F4141" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="350dp"
        android:text="+"
        android:textSize="20dp"
        app:backgroundTint="#8F4141" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="350dp"
        android:text="-"
        android:textSize="20dp"
        app:backgroundTint="#8F4141" />

    <Button
        android:id="@+id/button_remainder"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="350dp"
        android:text="%"
        android:textSize="20dp"
        app:backgroundTint="#8F4141" />

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:text="x"
        android:textSize="20dp"
        app:backgroundTint="#8F4141" />
    <Button
        android:id="@+id/button_divide"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="400dp"
        android:text="/"
        android:textSize="20dp"
        app:backgroundTint="#8F4141" />

    <Button
        android:id="@+id/button_C"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="400dp"
        android:text="C"
        android:textSize="20dp"
        app:backgroundTint="#8F4100" />

    <EditText
        android:id="@+id/EditText_ResultView"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"
        android:background="#A59898"
        android:text="" />
    <EditText
        android:id="@+id/EditText_ExtraView"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:background="#A59898"
        android:text="" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>